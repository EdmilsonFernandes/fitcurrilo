@model Projeto.Web.Models.CandidatoViewModel
   @{
       ViewBag.Title = "Cadastro";
       Layout = "~/Views/Shared/Layout.cshtml";
   }

   <h2>Novo Currículo</h2>

   @using (Html.BeginForm("AddCurriculo", "Candidato", null, FormMethod.Post, new {enctype = "multipart/form-data"}))
   {
       @Html.AntiForgeryToken()

<div class="form-horizontal">

    <div class="form-group">
        @Html.Label("Currículo:", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" id="Arquivo" name="upload" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.DataCadastro, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.DataAtualizacao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.CadastradoPor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.AtualizadoPor, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="col-md-12">

        <input type="submit" value="Cadastrar" class="btn btn-default" />
        <br><br>
    </div>
    <div class="col-md-12">
        <p class=ion-arrow-return-left> <a href="/Candidato/Detalhes/@Model.Id">Voltar</a> </p>
    </div>
</div>
       }