@model Projeto.Web.Models.CandidatoViewModel
@{
    ViewBag.Title = "Excluir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Excluir</h2>
@if (TempData["Sucesso"] != null)
{
    <h4><span class="label alert-success">@TempData["Sucesso"]</span></h4>
}
@if (TempData["Falha"] != null)
{
    <h4><span class="label alert-success">@TempData["Falha"]</span></h4>
}

<h3>Tem certeza que deseja excluir esse candidato e todos os seus currículos?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.GrauInstrucao)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.GrauInstrucao)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Observacao)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Observacao)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.CadastradoPor)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CadastradoPor)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DataCadastro)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.AtualizadoPor)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.AtualizadoPor)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.DataAtualizacao)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DataAtualizacao)
                </dd>
            </dl>
            <div class="col-md-12">
                <input type="submit" value="Excluir" class="btn btn-default" />

                <br><br>
            </div>
            <div class="col-md-12">
                <p class=ion-arrow-return-left> <a href="/Candidato/Detalhes/@Model.Id">Voltar</a></p>
            </div>
        </div>
    </div>
}